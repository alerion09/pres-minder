---
import Layout from "./Layout.astro";
import AppTopBar from "@/components/app/AppTopBar.astro";

interface Props {
  title?: string;
}

const { title = "PresMinder" } = Astro.props;
const currentPath = Astro.url.pathname;
const user = Astro.locals.user;
---

<Layout title={title}>
  <AppTopBar currentPath={currentPath} userEmail={user?.email} />
  <main class="container mx-auto px-4 py-6">
    <slot />
  </main>
  <div id="modal-root"></div>
</Layout>

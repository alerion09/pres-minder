---
import { ViewTransitions } from "astro:transitions";
import { Toaster } from "@/components/ui/sonner";
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "PresMinder" } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="bg-white dark:bg-slate-950">
    <div class="auth-container">
      <div class="auth-content">
        <!-- Branding -->
        <div class="text-center mb-8">
          <h1 class="text-3xl font-bold text-slate-900 dark:text-slate-50">PresMinder</h1>
          <p class="text-sm text-slate-600 dark:text-slate-400 mt-2">
            Twój asystent w zarządzaniu pomysłami na prezenty
          </p>
        </div>

        <!-- Form Container -->
        <div
          class="bg-white dark:bg-slate-950 rounded-lg shadow-lg border border-slate-200 dark:border-slate-800 p-6 sm:p-8"
        >
          <slot />
        </div>
      </div>
    </div>
    <Toaster client:only="react" />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  .auth-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 0;
  }

  .auth-content {
    width: 100%;
    max-width: 28rem;
    margin: 0 auto;
    padding: 0 1rem;
    transform: translateY(-2.5rem);
  }
</style>
